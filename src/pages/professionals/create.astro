---
import Layout from "../../layouts/Layout.astro";
import ProfileForm from "../../components/professionals/ProfileForm.astro";
import { getTranslations } from "../../i18n";
import Header from "../../components/Header.astro";

const locale = "es";
const t = getTranslations(locale);
---

<Layout
  title="Regístrate como profesional - HomeHelper"
  description="Únete a HomeHelper y conectá con clientes que necesitan tus servicios profesionales"
  locale={locale}
>
  <Header locale={locale} />
  <section class="max-w-3xl mx-auto px-4 py-10">
    <header class="mb-10">
      <h1 class="text-3xl sm:text-4xl font-semibold text-gray-900 mb-3">
        {t.header.becomeTasker}
      </h1>
      <p class="text-gray-600">
        {t.professionals.strings.subtitle}
      </p>
    </header>

    <ProfileForm t={t} locale={locale} />
  </section>
</Layout>
