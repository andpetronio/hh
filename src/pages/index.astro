---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import AdBanner from '../components/AdBanner.astro';
import { getTranslations } from '../i18n';
import { categories } from '../data/taskers';

const locale = 'es';
const t = getTranslations(locale);
---

<Layout 
  title="HomeHelper - Encuentra profesionales para tu hogar" 
  description="Conecta con profesionales verificados en plomería, jardinería, cuidado infantil y más"
  locale={locale}
>
  <Header locale={locale} />

  <div class="min-h-screen bg-gradient-to-b from-[#FFF8F3] to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-8 sm:py-16">
      <!-- Hero Section -->
      <div class="text-center mb-12 sm:mb-16">
        <h1 class="text-4xl sm:text-6xl font-bold text-gray-900 mb-4 sm:mb-6 font-serif">
          {t.hero.title1}
          <br />
          <span class="text-[#E07A5F]">{t.hero.title2}</span>
        </h1>
        <p class="text-lg sm:text-xl text-gray-600 mb-8 sm:mb-10 max-w-2xl mx-auto">
          {t.hero.subtitle}
        </p>

        <!-- Search Bar -->
        <div class="max-w-2xl mx-auto">
          <form action="/browse" method="get" class="relative">
            <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <input
              type="text"
              name="q"
              placeholder={t.hero.searchPlaceholder}
              class="w-full pl-12 pr-4 py-4 rounded-xl border-2 border-gray-200 focus:border-[#E07A5F] focus:outline-none text-lg"
            />
          </form>
        </div>
      </div>

      <!-- Categories Grid -->
      <div class="mb-12">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-6 font-serif">
          {t.categories.title}
        </h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4">
          {categories.map((category) => (
            <a
              href={`/browse?category=${category.id}`}
              class="bg-white rounded-xl p-6 border-2 border-gray-200 hover:border-[#E07A5F] hover:shadow-lg transition-all group"
            >
              <div class="text-4xl mb-3">{category.icon}</div>
              <h3 class="font-semibold text-gray-900 group-hover:text-[#E07A5F] transition-colors">
                {t.categories[category.id]}
              </h3>
            </a>
          ))}
        </div>
      </div>

      <AdBanner locale={locale} />

      <!-- Stats Section -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 sm:gap-8 bg-white rounded-2xl p-8 border-2 border-gray-100 mb-12">
        <div class="text-center">
          <svg class="w-8 h-8 mx-auto mb-3 text-[#E07A5F]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <div class="text-3xl font-bold text-gray-900 mb-1">10,000+</div>
          <div class="text-gray-600">{t.stats.taskers}</div>
        </div>
        <div class="text-center">
          <svg class="w-8 h-8 mx-auto mb-3 text-[#E07A5F]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
          </svg>
          <div class="text-3xl font-bold text-gray-900 mb-1">50,000+</div>
          <div class="text-gray-600">{t.stats.completed}</div>
        </div>
        <div class="text-center">
          <svg class="w-8 h-8 mx-auto mb-3 text-[#E07A5F]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
          </svg>
          <div class="text-3xl font-bold text-gray-900 mb-1">4.8/5</div>
          <div class="text-gray-600">{t.stats.rating}</div>
        </div>
      </div>

      <!-- How It Works -->
      <div class="mb-12">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-8 text-center font-serif">
          {t.howItWorks.title}
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-[#E07A5F] bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-[#E07A5F]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">{t.howItWorks.step1Title}</h3>
            <p class="text-gray-600">{t.howItWorks.step1Desc}</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-[#81B29A] bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-[#81B29A]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">{t.howItWorks.step2Title}</h3>
            <p class="text-gray-600">{t.howItWorks.step2Desc}</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-[#F4A261] bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-[#F4A261]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">{t.howItWorks.step3Title}</h3>
            <p class="text-gray-600">{t.howItWorks.step3Desc}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
