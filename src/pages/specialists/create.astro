---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import ProfileForm from "../../components/specialists/ProfileForm.astro";
import type { Translations } from "../../i18n/schema";
import { resolveRequestLocale } from "../../i18n/resolveRequestLocale";
import { getTranslations } from "../../i18n";
interface Props {
  t: Translations;
}

// üåç idioma
const locale = resolveRequestLocale(Astro.request);
const t = getTranslations(locale);
---

<Layout
  title="Reg√≠strate como profesional - HomeHelper"
