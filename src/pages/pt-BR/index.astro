---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Hero from "../../components/Hero.astro";
import CategoryGrid from "../../components/CategoryGrid.astro";
import AdBanner from "../../components/AdBanner.astro";
import Stats from "../../components/Stats.astro";
import HowItWorks from "../../components/HowItWorks.astro";
import { getTranslations } from "../../i18n";

const locale = "pt-BR";
const t = getTranslations(locale);
---

<Layout
  title="HomeHelper - Encuentra profesionales para tu hogar"
  description="Conecta con profesionales verificados en plomería, jardinería, cuidado infantil y más"
  locale={locale}
>
  <Header locale={locale} />

  <div class="min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-8 sm:py-16">
      <!-- Hero Section -->
      <Hero t={t} locale={locale} />

      <!-- Categories Grid -->
      <CategoryGrid t={t} locale={locale} />

      <!-- Ad Banner -->
      <AdBanner locale={locale} />

      <!-- Stats Section -->
      <Stats t={t} />

      <!-- How It Works -->
      <HowItWorks t={t} />
    </div>
  </div>
</Layout>
