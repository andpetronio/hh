---
const { t } = Astro.props;
const p = t.specialists.placeholders;
---

<section>
  <h2 class="text-xl font-semibold text-gray-900 mb-4">
    {t.profile.about}
  </h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <input
      type="text"
      name="first_name"
      placeholder={p.firstName}
      class="w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-gray-900 focus:outline-none"
    />
    <input
      type="text"
      name="last_name"
      placeholder={p.lastName}
      class="w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-gray-900 focus:outline-none"
    />
  </div>

  <textarea
    name="description"
    rows="4"
    placeholder={p.description}
    class="mt-4 w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-gray-900 focus:outline-none"
  ></textarea>
  
</section>
