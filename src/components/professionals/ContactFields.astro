---
const { t } = Astro.props;
const p = t.specialists.placeholders;
---

<section>
  <h2 class="text-xl font-semibold text-gray-900 mb-4">
    {t.profile.contacts}
  </h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <input
      type="tel"
      name="whatsapp"
      placeholder={p.whatsapp}
      class="w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-gray-900 focus:outline-none"
    />

    <input
      type="email"
      name="email"
      placeholder={p.email}
      class="w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-gray-900 focus:outline-none"
    />
  </div>
</section>
