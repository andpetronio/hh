---
const { t } = Astro.props;
const p = t.createManers.placeholders;
---

<section>
  <h2 class="text-xl font-semibold text-gray-900 mb-4">
    {t.profile.location}
  </h2>

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
    <select
      name="country"
      class="w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-gray-900 focus:outline-none"
    >
      <option value="">País</option>
      <option value="AR">Argentina</option>
      <option value="BR">Brasil</option>
      <option value="CL">Chile</option>
      <option value="UY">Uruguay</option>
      <option value="PY">Paraguay</option>
      <option value="MX">México</option>
    </select>

    <input
      type="text"
      name="region"
      placeholder={p.region}
      class="w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-gray-900 focus:outline-none"
    />

    <input
      type="text"
      name="city"
      placeholder={p.city}
      class="w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-gray-900 focus:outline-none"
    />
  </div>
</section>
