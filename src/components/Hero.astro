---
interface Props {
  t: any;
  locale: string;
}

const { t, locale } = Astro.props;
const baseUrl = locale === 'es' ? '' : '/pt-BR';
---

<div class="text-center mb-12 sm:mb-16">
  <h1 class="text-4xl sm:text-6xl font-bold text-gray-900 mb-4 sm:mb-6 font-serif">
    {t.hero.title1}
    <br />
    <span class="text-[#E07A5F]">{t.hero.title2}</span>
  </h1>
  <p class="text-lg sm:text-xl text-gray-600 mb-8 sm:mb-10 max-w-2xl mx-auto">
    {t.hero.subtitle}
  </p>

  <div class="max-w-2xl mx-auto">
    <form action={`${baseUrl}/browse`} method="get">
      <div class="relative">
        <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <input
          type="text"
          name="q"
          placeholder={t.hero.searchPlaceholder}
          class="w-full pl-12 pr-4 py-4 rounded-xl border-2 border-gray-200 focus:border-[#E07A5F] focus:outline-none text-lg"
        />
      </div>
    </form>
  </div>
</div>
