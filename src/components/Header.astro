  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between h-16">
      <a
        href={"/"}
        class="flex items-center hover:opacity-80 transition-opacity"
      >
        <div
          class="w-10 h-10 bg-gradient-to-br from-[#E07A5F] to-[#F4A261] rounded-xl flex items-center justify-center"
        >
          <span class="text-white text-xl font-bold">H</span>
        </div>
        <span class="ml-3 text-xl font-bold text-gray-900 font-serif">
          HomeHelper
        </span>
      </a>

      <nav class="hidden md:flex space-x-8">
        <a
          href={"/browse"}
          class="text-gray-700 hover:text-gray-900 font-medium transition-colors"
        >
          {t.header.browseTaskers}
        </a>
        <a
          href={"/#howItWorks"}
          class="text-gray-700 hover:text-gray-900 font-medium transition-colors"
        >
          {t.header.howItWorks}
        </a>
        <a
          href={"/professionals/create"}
          class="text-gray-700 hover:text-gray-900 font-medium transition-colors"
        >
          {t.header.becomeTasker}
