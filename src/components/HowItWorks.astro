---
interface Props {
  t: any;
}

const { t } = Astro.props;
---

<div class="mb-12" id="howItWorks">
  <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-8 text-center font-serif">
    {t.howItWorks.title}
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <div class="text-center">
      <div class="w-16 h-16 bg-[#E07A5F] bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-7 h-7 text-[#E07A5F]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-gray-900 mb-2">{t.howItWorks.step1Title}</h3>
      <p class="text-gray-600">{t.howItWorks.step1Desc}</p>
    </div>
    <div class="text-center">
      <div class="w-16 h-16 bg-[#81B29A] bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-7 h-7 text-[#81B29A]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-gray-900 mb-2">{t.howItWorks.step2Title}</h3>
      <p class="text-gray-600">{t.howItWorks.step2Desc}</p>
    </div>
    <div class="text-center">
      <div class="w-16 h-16 bg-[#F4A261] bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-7 h-7 text-[#F4A261]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-gray-900 mb-2">{t.howItWorks.step3Title}</h3>
      <p class="text-gray-600">{t.howItWorks.step3Desc}</p>
    </div>
  </div>
</div>
