---
import type { Translations } from "../i18n/schema";

interface Props {
  t: Translations;
}

const { t } = Astro.props;
---

<div
  class="bg-gradient-to-r from-gray-100 to-gray-50 border border-gray-200 rounded-xl p-4 my-6"
>
  <div class="flex items-center justify-between">
    <div class="flex-1">
      <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">
        {t.ad.sponsored}
      </p>
      <p class="text-sm font-medium text-gray-700">
        {t.ad.title}
      </p>
      <p class="text-xs text-gray-600 mt-1">
        {t.ad.subtitle}
      </p>
    </div>

    <button
      class="bg-gray-800 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-700 transition-colors"
    >
      {t.ad.cta}
    </button>
  </div>
</div>
