---
import { trades } from "../data/trades";
import type { Translations } from "../i18n/schema";

interface Props {
  t: Translations;
}

const { t } = Astro.props;
---

<div class="mb-12">
  <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-6 font-serif">
    {t.trades.title}
  </h2>
  <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4">
    {
      trades.map((trade) => (
        <a
          href={`/browse?trade=${trade.id}`}
          class="bg-white rounded-xl p-6 border-2 border-gray-200 
             flex flex-col items-center text-center
             hover:border-[#E07A5F] hover:shadow-lg transition-all group"
        >
          <div class="text-4xl mb-3">{trade.icon}</div>

          <h3 class="font-semibold text-gray-900 group-hover:text-[#E07A5F] transition-colors">
            {t.trades[trade.id]}
          </h3>
        </a>
      ))
    }
  </div>
</div>
